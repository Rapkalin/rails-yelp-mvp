<div class="container mt-3">
    <h1>Create a new restaurant</h1>

    <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.submit "Submit restaurant", class: "btn btn-primary mt-3" %>
    <span class="btn btn-primary mt-3 stretched-link" id="link"> <%= link_to "Go back to restaurants", restaurants_path %></span>
    <% end %>
</div>
